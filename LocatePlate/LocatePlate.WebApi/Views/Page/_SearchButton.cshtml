<h2> Button @ViewBag.ButtonCount</h2>
<div class="form-group">
    <label class="control-label">Name</label>
    <input class="form-control" name="@Convert.ToString(ViewBag.InnerPrefix)Name"  type="text" />
</div>

<div class="form-group">
    <label class="control-label">Keyword</label>
    <input class="form-control" name="@Convert.ToString(ViewBag.InnerPrefix)Keyword"  type="text" />
    <span class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Order</label>
    <input class="form-control" name="@Convert.ToString(ViewBag.InnerPrefix)Order" value="@ViewBag.ButtonCount" type="text" />
    <span class="text-danger"></span>
</div>
