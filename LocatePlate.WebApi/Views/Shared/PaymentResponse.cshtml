<div class="bg-auth">
    <div class="col-md-12 col-sm-12 col-12">
        <div class="row">
            <div class="col-md-5 col-5 mx-auto mb-5">
                <div class="successfull_msg pay_failed">
                    <div class="payment-success">
                        <div class="card_failed">
                            <i class="fa fa-exclamation"></i>
                        </div>
                        <h2 class="title_failed">Your Payment Failed</h2>
                    </div>
                    <div class="amount-paid">
                        <div class="col-md-12 col-sm-12 col-12">
                            <div class="row">
                                <div class="col-md-6 col-12 text-left pl-0">
                                    Amount :
                                </div>
                                <div class="col-md-6 col-12 text-right pr-0">
                                     250 $
                                </div>
                            </div>
                        </div>
                        <div class="col-12 text-center">
                            <button class="tryagain_btn">Try again</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
