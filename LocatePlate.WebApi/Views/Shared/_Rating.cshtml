@model double?

<div class="rating font-18">
    @{
        if (Model != null)
        {
            var isHalf = (Model % 1) != 0;
            int count = (int)Model;

            for (int i = 0; i < 5; i++)
            {
                if (isHalf && i == count)
                {
                    <span class="fa fa-star-half-o fa-star checked"></span>
                }
                else if (i < count)
                {
                    <span class="fa fa-star checked"></span>
                }
                else
                {
                    <span class="fa fa-star unchecked"></span>
                }
            }
        }
        else
        {
            for (int i = 0; i < 5; i++)
            {
                <span class="fa fa-star unchecked"></span>
            }

        }
    }
</div>
