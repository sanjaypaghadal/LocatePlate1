@model MenuReservation
@{
    Layout = null;
}
<div class="modal" id="add-to-order-model" tabindex="-1" role="dialog">
    <form class="addtoorder" id="addtoorder" asp-action="AddToOrder" asp-controller="Home" method="post">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title font-20 bold-600 w-100 text-center">@Model.Name</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="Price" value="@Model.Price" />
                <input type="hidden" name="Name" value="@Model.Name" />
                <input type="hidden" id="hdnRestaurantId" name="RestaurantId" value="@Model.RestaurantId" />
                <input type="hidden" name="Url" value="@Model.Url" />
                <input type="hidden" name="CityName" value="@Model.CityName" />


                <div class="modal-body">
                    <div class="font-16"><span class="bold-600">Price: </span> $@Model.Price</div>
                    <div>
                        <div class="form-group my-2">
                            <label class="bold-600 w-100 font-16">Special instructions</label>
                            <textarea rows="4" class="w-100 border" name="SpecialInstruction"></textarea>
                        </div>
                        <div class="form-inline quatity-section">
                            <label class="mr-3 bold-600 font-16">Quantity</label>
                            <div class="value-button text-white bg-primary bold-600 decrease-button" value="Decrease Value">-</div>
                            <input type="number" class="number" name="Quantity" value="1" />
                            <div class="value-button text-white bg-primary bold-600 increate-button" value="Increase Value">+</div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary bold-600" data-dismiss="modal">Cancel</button>
                    <input type="button" data-dismiss="modal" class="prepare-order btn bg-primary text-white bold-600" value="Add for reservation" />
                </div>
            </div>
        </div>
    </form>
</div>