@model PaginatedList<LocatePlate.Model.Cms.Page>
@{
    ViewData["Title"] = "Page Manager";
    Layout = "~/Views/Shared/_LayoutCms.cshtml";
}
<div class="card pb-4">
    <div class="card-header card-header-rose card-header-text">
        <div class="card-head bg-primary">
            <h4 class="card-title-top text-white">
                Page Manager
            </h4>
        </div>
    </div>
    @if (Model.Count > 0)
    {
        <div class="card-body">
            <div class="d-sm-flex align-items-center mb-4 restaurant-create-link">
                <a class="mb-3 mb-sm-0 ml-auto" asp-controller="SeedModule"
                   asp-action="Index">Reset Module</a>
                <a class="mb-3 mb-sm-0 ml-auto" asp-action="Create">Create Page</a>
            </div>
            <div class="scroll-div">
                <div class="table-responsive border rounded">
                    <table class="table">
                        <thead class="text-center">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().Url)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Url)
                                    </td>
                                    <td>
                                        <a href="/@item.Url/restaurants" target="_blank">Open page</a>
                                        <a asp-action="Create" asp-route-id="@item.Id"><img src="~/images/edit.png" class="mr-2" /></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/trash.png" class="mr-2" /> </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <ul>
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item"><a asp-controller="Restaurant" asp-action="Index" asp-route-pageindex="@Convert.ToInt32(Model.PageIndex)-1" class="page-link"><i class="icon-arrow-right"></i></a></li>
                }
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex)?'active':''"><a asp-action="Index" asp-route-pageindex="@(i - 1)" class="page-link">@i</a></li>
                }
                @if (Model.HasNextPage)
                {
                    <li class="page-item"><a asp-controller="Restaurant" asp-action="Index" asp-route-pageindex="@Convert.ToInt32(Model.PageIndex)+1" class="page-link"><i class="icon-arrow-right"></i></a></li>
                }
            </ul>
        </div>
    }
    else
    {
        <div class="card-body">
            <div class="table-responsive border my-5 rounded">
                <table class="table">
                    <thead class="text-center">
                        <tr>
                            <th class="font-weight-bold"> @Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                            <th class="font-weight-bold"> @Html.DisplayNameFor(model => model.FirstOrDefault().Url)</th>
                            <th class="font-weight-bold"> @Html.DisplayNameFor(model => model.FirstOrDefault().PageLayout.Name)</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        <tr>
                            <td class="font-16px border-right-0" colspan="4"> Please Add Page to Proceed  <a class="mb-3 mb-sm-0" asp-action="Create">Add Page</a> </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
