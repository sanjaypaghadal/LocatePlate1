@model List<LocatePlate.Model.Cms.Section>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var it = $"{item.Markup}MyUniqueBreakpoint{item.Id}";

        var selected = ViewBag.SectionDropDown;
        foreach (var section in selected)
        {
            if (Convert.ToString(section.Value).Contains("MyUniqueBreakpoint"))
                section.Selected = Convert.ToString(item.Id) == Convert.ToString(section.Value).Split("MyUniqueBreakpoint")[1];
        }

        <tr class="mb-4">
            <td class="w-35">
                <select name="Section" class="form-control form-control-lg section-dropdown" asp-items="@selected">
                </select>
            </td>
            <td class="w-65 px-4">
                @Html.Raw(item.Markup)
            </td>
            <td class="remove-row cursor-pointer">
                <i class="icon-close text-primary font-30 remCF"></i>
            </td>
        </tr>
    }
}
else
{
    <tr class="mb-4">
        <td class="w-35">
            <select name="Section" class="form-control form-control-lg section-dropdown" asp-items="@ViewBag.SectionDropDown">
            </select>
        </td>
        <td class="w-65 px-4">
        </td>
        <td class="remove-row cursor-pointer">
            <i class="icon-close text-primary font-30 remCF"></i>
        </td>
    </tr>
}