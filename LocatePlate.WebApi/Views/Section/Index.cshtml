@model PaginatedList<LocatePlate.Model.Cms.Section>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCms.cshtml";
}
<div class="card pb-4">
    @if (Model.Count > 0)
    {
        <div class="card-header card-header-rose card-header-text">
            <div class="card-head bg-primary">
                <h4 class="card-title-top text-white">
                    Section
                </h4>
            </div>
        </div>
        <div class="card-body">
            <div class="d-sm-flex align-items-center mb-4 restaurant-create-link">
                <a class="mb-3 mb-sm-0 ml-auto" asp-action="Create">Add Section</a>
            </div>
            <div class="scroll-div">
                <div class="table-responsive border rounded scroll-div">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().Markup)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstOrDefault().Image)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Markup)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Image)
                                    </td>
                                    <td>
                                        <a asp-action="Create" asp-route-id="@item.Id"><img src="~/images/edit.png" class="mr-2" /></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/trash.png" class="mr-2" /> </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            
            @if (Model.TotalCount > 10)
            {
                <div class="d-flex mt-4 flex-wrap">
                    <p class="text-muted">Showing 1 to 10 of @Model.TotalCount entries</p>
                    <nav class="ml-auto">
                        <ul class="pagination separated pagination-info">
                            @*@if (Model.HasPreviousPage )
                                {
                                    <li class="page-item"><a asp-controller="Restaurant" asp-action="Index" asp-route-pageindex="@Convert.ToInt32(Model.PageIndex)-1" class="page-link"><i class="icon-arrow-right"></i></a></li>
                                }*@
                            <li class="page-item"><a href="" class="page-link"><i class="icon-arrow-left"></i></a></li>
                            @for (var i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageIndex)?'active':''"><a asp-action="Index" asp-route-pageindex="@(i - 1)" class="page-link">@i</a></li>
                            }
                            @*@if (Model.HasNextPage)
                                {
                                    <li class="page-item"><a asp-controller="Restaurant" asp-action="Index" asp-route-pageindex="@Convert.ToInt32(Model.PageIndex)+1" class="page-link"><i class="icon-arrow-right"></i></a></li>
                                }*@
                        </ul>
                    </nav>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card-body">
            <div class="table-responsive border my-5 rounded">
                <table class="table">
                    <thead class="text-center">
                        <tr>
                            <th class="font-weight-bold"> @Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().Markup)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstOrDefault().Image)
                            </th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        <tr>
                            <td class="font-16px border-right-0" colspan="4">No records found, click on add to proceed<a class="mb-3 mb-sm-0" asp-action="Create">Add Section</a> </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
